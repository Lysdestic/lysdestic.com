---
import Link from './Link.astro'
import Email from './Email.astro'
import { Icon } from 'astro-icon'
import { links } from '../../data/links'

const { linkedIn, github } = links
---

<footer>
  <Link {...github}>
    <Icon name="ion:logo-github" />
  </Link>

  <Link {...linkedIn}>
    <Icon name="ion:logo-linkedin" />
  </Link>

  <Email>
    <Icon name="ion:mail" />
  </Email>
</footer>

<style>
  [astro-icon] {
    width: 2rem;
    text-decoration: none;
  }
  footer {
    display: flex;
    justify-content: flex-end;
    gap: 20px;
    width: 100%;
    font-size: 0;
  }
  footer a {
    display: none;
    text-decoration: none;
    text-underline-offset: 0;
  }
</style>
