---
import Link from './Link.astro'
import Email from './Email.astro'
import { Icon } from 'astro-icon'
import { links } from '../../data/links'

const { linkedIn, github } = links
---

<footer>
  <p>Built and designed by Jordan Laurent</p>
  <div class="contacts-container">
    <Link {...github}>
      <Icon name="ion:logo-github" />
    </Link>

    <Link {...linkedIn}>
      <Icon name="ion:logo-linkedin" />
    </Link>

    <Email>
      <Icon name="ion:mail" />
    </Email>
  </div>
</footer>

<style>
  [astro-icon] {
    color: var(--dark);
    width: 2rem;
    text-decoration: none;
  }

  .contacts-container {
    display: flex;
    justify-content: flex-end;
    gap: 20px;
    width: 50%;
    font-size: 0;
  }

  footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    color: var(--mid);
  }

  footer a {
    display: none;
    text-decoration: none;
    text-underline-offset: 0;
  }

  @media (prefers-color-scheme: dark) {
    [astro-icon] {
      color: var(--light);
    }
  }
</style>
