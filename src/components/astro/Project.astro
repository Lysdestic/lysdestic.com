---
const { title, description, label, deployUrl, imageUrl, repoUrl } = Astro.props
---

<li id={label}>
  <h2>{title}</h2>
  <div class="container">
    <img src={imageUrl} width="50%" />
    <div class="link-container">
      <a href={deployUrl}>Live Deploy</a>
      <a href={repoUrl}>Github Repo</a>
    </div>
  </div>
  <p>{description}</p>
</li>

<style>
  li {
    list-style: none;
    padding: 0.5rem 0;
  }
  h2 {
    font-size: 3rem;
    font-weight: 800;
    background-color: var(--light);
    color: var(--dark);
    margin: 1rem 0;
    padding-inline: 1rem;
  }
  .container {
    display: flex;
  }
  .link-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 1rem;
  }
  .link-container a {
    font-size: 1.5rem;
  }
</style>
