---
import '@fontsource/rokkitt'
import '@fontsource/rokkitt/variable.css'
import Link from './LinkNewTab.astro'
import { Icon } from 'astro-icon'

const { title, description, label, imageUrl, links } = Astro.props
---

<li id={label}>
  <h2>{title}</h2>
  <p>{description}</p>
  <div class="container">
    <img src={imageUrl} />
    <div class="link-container">
      {
        links.map((item) => (
          <Link link={item.url} class={'deploy-link'}>
            <Icon name={item.icon} />
            {item.content}
          </Link>
        ))
      }
    </div>
  </div>
</li>

<style>
  li {
    list-style: none;
    padding: 0.5rem 0;
  }

  h2 {
    font-family: 'Rokkitt', serif;
    font-size: 4rem;
    line-height: 100%;
    font-weight: 800;
    margin: 2rem 0;
    padding: 0;
    text-align: center;
    overflow: hidden;
  }

  h2:before,
  h2:after {
    background-color: var(--dark);
    display: inline-block;
    height: 10px;
    content: '';
    position: relative;
    vertical-align: middle;
    width: 50%;
  }

  h2:before {
    right: 0.5em;
    margin-left: -50%;
  }
  h2:after {
    left: 0.5em;
    margin-right: -50%;
  }

  img {
    transition: all linear 100ms;
    transition-delay: 200ms;
    width: 50%;
    box-shadow: 3px 3px 5px var(--mid);
    filter: opacity(60%);
  }

  img:hover,
  img:focus {
    transition: all linear 200ms;
    transform: translate(-2px, -3px);
    box-shadow: 5px 5px 9px var(--mid);
    filter: opacity(100%);
  }

  .container {
    display: flex;
  }

  .link-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    padding-inline-start: 3rem;
  }

  .deploy-link {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 10px;
    width: fit-content;
    font-size: 1.5rem;
  }

  [astro-icon] {
    width: 1.8rem;
  }

  @media (prefers-color-scheme: dark) {
    h2:before,
    h2:after {
      background-color: var(--light);
    }

    img {
      box-shadow: 3px 3px 5px #111;
    }

    img:hover,
    img:focus {
      box-shadow: 5px 5px 9px #111;
    }
  }
</style>
