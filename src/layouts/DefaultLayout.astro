---
import Header from '../components/astro/Header.astro'
import Footer from '../components/astro/Footer.astro'
import '../styles/global.css'
import '@fontsource/albert-sans'
import '@fontsource/albert-sans/variable.css'

const {
  title = 'Jordan Laurent',
  subtitle = 'Home',
  description = 'Software Developer in Portland, Oregon.',
  author = 'Jordan Laurent',
} = Astro.props
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {subtitle}</title>
  </head>
  <body>
    <Header />
    <main>
      <slot>
        <p>
          If you're seeing this, something went wrong - and <address style="display: inline">
            <a href="mailto:jlaurent.pdx@gmail.com" target="_blank" rel="noopener" aria-label="Jordan via email"
              >jlaurent.pdx@gmail.com</a
            >
          </address> would love to hear from you.
        </p>
      </slot>
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    font-family: 'Albert Sans', sans-serif;
    font-weight: 100;
  }
</style>
