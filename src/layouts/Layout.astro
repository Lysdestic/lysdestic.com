---
import Header from '../components/astro/Header.astro'
import Footer from '../components/astro/Footer.astro'
import Email from '../components/astro/Email.astro'
import '@fontsource/albert-sans'
import '@fontsource/albert-sans/variable.css'
import '@fontsource/rokkitt'
import '@fontsource/rokkitt/variable.css'

const {
  title = 'Jordan Laurent',
  includeHeading = false,
  subtitle = 'Home',
  description = 'Software Developer in Portland, Oregon.',
  author = 'Jordan Laurent',
} = Astro.props
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | {subtitle}</title>
  </head>
  <body>
    <Header />
    <main>
      {includeHeading ? <h1>{subtitle}</h1> : null}
      <slot>
        <section id="slotError">
          <h1 class="error-header">Whoops.</h1>
          <article>
            If you're seeing this, something went terribly wrong â€” and I would love to hear from you! Please reach out
            to me at <Email />.
          </article>
        </section>
      </slot>
    </main>
    <Footer />
  </body>
</html>

<style>
  .error-header {
    font-style: italic;
  }
</style>

<style is:global>
  :root {
    --dark: rgba(45, 56, 72, 1);
    --light: rgba(250, 250, 250, 1);
    --mid: rgba(179, 179, 179, 1);
    --light-gradient: linear-gradient(
      90deg,
      hsl(216deg 24% 96%) 0%,
      hsl(216deg 24% 97%) 2%,
      hsl(216deg 24% 98%) 5%,
      hsl(216deg 24% 99%) 8%,
      hsl(300deg 25% 98%) 13%,
      hsl(300deg 25% 98%) 19%,
      hsl(300deg 25% 98%) 30%,
      hsl(300deg 25% 98%) 53%,
      hsl(300deg 25% 98%) 76%,
      hsl(300deg 25% 98%) 85%,
      hsl(300deg 25% 98%) 91%,
      hsl(216deg 24% 99%) 94%,
      hsl(216deg 24% 98%) 97%,
      hsl(216deg 24% 97%) 99%,
      hsl(216deg 24% 96%) 100%
    );
    --dark-gradient: linear-gradient(
      15deg,
      hsl(221deg 100% 9%) 8%,
      hsl(221deg 79% 10%) 36%,
      hsl(224deg 63% 12%) 49%,
      hsl(227deg 50% 14%) 59%,
      hsl(231deg 41% 16%) 68%,
      hsl(235deg 35% 17%) 75%,
      hsl(238deg 30% 19%) 81%,
      hsl(242deg 27% 20%) 87%,
      hsl(246deg 25% 22%) 93%,
      hsl(249deg 23% 23%) 99%
    );
  }

  /* ================ LIGHT MODE SETTINGS ================ */

  html {
    height: 100%;
    background-image: var(--light-gradient);
    color: var(--dark);
  }

  * {
    box-sizing: border-box;
  }

  body {
    width: 100%;
    max-width: 80ch;
    margin: 0 auto;
    padding: 1rem;
    color: inherit;
    font-family: 'Albert Sans', sans-serif;
    font-size: 1.3rem;
    font-weight: 400;
    line-height: 1.8;
  }

  h1 {
    margin: 0;
    padding: 1rem 0;
    font-family: 'Rokkitt', serif;
    font-size: 6rem;
    font-weight: 400;
    line-height: normal;
  }

  p,
  a,
  address,
  article {
    font-size: inherit;
  }

  a {
    color: inherit;
    text-decoration: underline dotted var(--mid);
    text-underline-offset: 0.25rem;
  }

  a:hover,
  a:focus {
    outline: var(--dark) solid 2px;
    outline-offset: 1px;
    border-radius: 2px;
  }

  @media (prefers-color-scheme: dark) {
    html {
      background-image: var(--dark-gradient);
      background-size: cover;
      background-repeat: no-repeat;
      background-color: hsl(221deg 100% 9%);
      color: var(--light);
    }

    a:hover,
    a:focus {
      outline: var(--light) solid 2px;
    }
  }

  @media only screen and (max-width: 800px) {
    a {
      text-decoration: underline solid var(--mid);
      text-underline-offset: unset;
    }
  }
</style>
