---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import Link from '../../components/astro/Link.astro'
import { links } from '../../data/links.js'

const { linkedIn, github, email } = links
---

<DefaultLayout>
  <section id="contact" class="contact__section">
    <h1>Contact</h1>

    <article class="contact__description">
      <p><em>Let's keep in touch.</em></p>
      You can reach me on
      <Link {...linkedIn} />, check out my open-source projects and contributions on
      <Link {...github} />, or email me any time at
      <address>
        <Link {...email} />
      </address>.
    </article>
  </section>
</DefaultLayout>
