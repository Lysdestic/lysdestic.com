---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <div class="gradient-container">
    <h1 class="intro">
      <span class="heading-lead">Howdy.</span> I'm
      <span class="heading-name">Jordan</span>
    </h1>
    <p>
      â€” a full-stack
      <span class="role">software developer</span>,
      <span class="role">multimedia artist</span>, and
      <span class="role">educator</span>
      in Portland, Oregon making people-first, user-friendly tools and technology with an emphasis on design, inclusivity,
      and accessibility.
    </p>
  </div>
</Layout>

<style>
  .intro {
    font-size: 4.5rem;
  }

  .heading-lead {
    display: block;
  }

  .heading-name,
  .role {
    font-weight: 600;
  }

  @media screen and (min-width: 600px) {
    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    .intro {
      font-size: 8rem;
    }

    .heading-name,
    .role {
      font-weight: 800;
      -webkit-text-fill-color: transparent;
    }

    .gradient-container {
      background: linear-gradient(
        300deg,
        hsl(14, 82%, 63%),
        hsl(337, 78%, 57%),
        hsl(168, 72%, 49%),
        hsl(218, 65%, 57%)
      );
      background-size: 400% 400%;
      background-clip: text;
      animation: gradient 30s ease infinite;
      -webkit-background-clip: text;
      -webkit-text-fill-color: var(--dark);
    }

    @media (prefers-color-scheme: dark) {
      .gradient-container {
        -webkit-text-fill-color: var(--light);
      }
    }
  }
</style>
